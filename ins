if [ "${PKG_OK}" == "installed" ]; then
if [ "$1" == "-R" ] ; then
GET_INSTALL="NO"
else
GET_INSTALL=$(redis-cli get RAMBO_INSTALL)
fi
if [ "${GET_INSTALL}" == "Yes" ]; then
echo -e "
${SMAY}>> ${LSAMAY}Source RAMBO${SMAY} is Already Installed ^_^ .\n${CNIL}"
